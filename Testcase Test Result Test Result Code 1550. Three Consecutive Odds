class Solution {
public:
    bool threeConsecutiveOdds(vector<int>& arr) {
        int numOdds = 0;
        for (int i=0; i<arr.size(); i++) {
            if (arr[i]%2==0) numOdds = 0;
            else {
                numOdds++;
                if (numOdds >= 3) return true;
            }
        }
        return false;
    }
};
